<% breadcrumb :report_balance, @project %>

<h1>Balance</h1>

<script type="text/javascript">
  google.charts.load('current', {'packages':['corechart']});
  google.charts.setOnLoadCallback(drawChart);

  function drawChart() {
    var div = $('#chart_div');
    div.css('height', div.width() * 0.7);

    var url = 'balance_data?' + $('#report_options').serialize();
    $('#chart_div').animate({opacity: 0});
    $.get(url, function(jsonData) {
      var data = new google.visualization.DataTable(jsonData);
      var options = {
        isStacked: true
      };

      var chart = new google.visualization.LineChart(document.getElementById('chart_div'));

      chart.draw(data, options);
      $('#chart_div').animate({opacity: 1});
    });
  }

  $(function() {
    var $from_date = $('#from_date'),
        $to_date = $('#to_date');

    $('#from_date').pickadate({
      format: 'yyyy-mm-dd',
      onStart: function() {
        this.set('select', [
            <%= @default_start_date.year %>,
            <%= @default_start_date.month - 1 %>,
            <%= @default_start_date.day %>
        ]);
      }
    });

    $('#to_date').pickadate({
      format: 'yyyy-mm-dd',
      onStart: function() {
        this.set('select', [
          <%= @default_end_date.year %>,
          <%= @default_end_date.month - 1 %>,
          <%= @default_end_date.day %>
        ]);
      }
    });
  });

</script>

<form id="report_options">
<div class="row">
  <div class="col s3">
    <label for="from_date">From Date</label>
    <input id="from_date" name="from_date" type="text" class="datepicker" value="<%= @default_start_date.strftime('%Y-%m-%d') %>">
  </div>
  <div class="col s3">
    <label for="to_date">To Date</label>
    <input id="to_date" name="to_date" type="text" class="datepicker" value="<%= @default_end_date.strftime('%Y-%m-%d') %>">
  </div>
  <div class="col s6">
  </div>
</div>
</form>

<div class="row">
  <div class="col s12">
    <a onclick="drawChart();" class="btn right">Apply</a>
  </div>
</div>

<div id="chart_div"></div>