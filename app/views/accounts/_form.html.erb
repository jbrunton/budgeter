<%= form_for(@record) do |form| %>
  <% if @account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% @account.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :account_name %>
  </div>

  <div class="input-field">
    <%= form.select :account_type, Account::TYPES %>
    <%= form.label :type %>
  </div>

  <div class="actions">
    <%= form.submit class: 'waves-effect waves-light btn' %>
    <%= link_to 'Cancel', @account.new_record? ? project_accounts_path(@project) : @account, class: 'waves-effect btn-flat' %>
  </div>
<% end %>
