<% breadcrumb :account, @account %>

<div class="row">
  <div class="col s10">
    <h3><%= @account.name %></h3>
  </div>
  <div class="col s2">
    <%= link_to 'Edit', edit_account_path(@account), class: 'right btn-flat waves-effect' %>
  </div>
</div>

<div class="row">
  <div class="col s4">
    <ul class="collection with-header">
      <li class="collection-header"><h4>Reports</h4></li>

    </ul>
  </div>
  <div class="col s4">
    <ul class="collection with-header">
      <li class="collection-header"><h4>Transactions</h4></li>
      <li class="collection-item">
        <%= link_to 'Import Statement', import_statement_account_path(@account) %>
      </li>
      <li class="collection-item">
        <%= link_to 'View Transactions', account_transactions_path(@account) %>
      </li>
    </ul>
  </div>
  <div class="col s4">
    <p>
      <strong>Type:</strong>
      <%= @account.account_type %>
    </p>
  </div>
</div>
