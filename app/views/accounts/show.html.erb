<% breadcrumb :account, @account %>

<p id="notice"><%= notice %></p>

<h3><%= @account.name %></h3>

<div class="row">
  <div class="col s4">
    <ul class="collection with-header">
      <li class="collection-header"><h4>Reports</h4></li>

    </ul>
  </div>
  <div class="col s4">
    <ul class="collection with-header">
      <li class="collection-header"><h4>Transactions</h4></li>
      <li class="collection-item">
        <%= link_to 'Import Statement', import_statement_account_path(@account) %>
      </li>
    </ul>
  </div>
  <div class="col s4">
    <p>
      <strong>Type:</strong>
      <%= @account.account_type %>
    </p>
  </div>
</div>

<%= link_to 'Edit', edit_account_path(@account) %>